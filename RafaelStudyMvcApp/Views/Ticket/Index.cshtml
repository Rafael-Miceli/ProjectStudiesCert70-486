@model IEnumerable<RafaelStudyMvcApp.Models.Tickets>

@{
    ViewBag.Title = "Index";
}

<h2>Latest Opened Tickets</h2>

Latest @Model.Count() opened tickets

@foreach (var item in Model)
{
    @*@:Ticket*@
    <div class="ticket">
        <h4>@item.Title</h4>
        <span>@item.Condo</span>
        <p>@item.OpenedDate</p>
    </div>
    
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>


